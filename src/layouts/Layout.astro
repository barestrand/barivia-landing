---
import type { Lang } from "../i18n/ui";

interface Props {
  title: string;
  description?: string;
  lang?: Lang;
}

const {
  title,
  description = "Barivia AB â€” See the nuance in your data. Anomaly detection, regime analysis, and process monitoring for structured data.",
  lang = "en",
} = Astro.props;

const canonicalUrl = lang === "en" ? "https://barivia.se/" : `https://barivia.se/${lang}/`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#003366" />

    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="en" href="https://barivia.se/" />
    <link rel="alternate" hreflang="sv" href="https://barivia.se/sv/" />
    <link rel="alternate" hreflang="x-default" href="https://barivia.se/" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:site_name" content="Barivia AB" />
    <meta property="og:locale" content={lang === "sv" ? "sv_SE" : "en_GB"} />

    <!-- Twitter / LinkedIn -->
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body class="bg-barivia-light text-barivia-dark font-sans antialiased">
    <slot />
  </body>
</html>

---
import { t, type Lang } from "../i18n/ui";
interface Props { lang: Lang }
const { lang } = Astro.props;

const signals = [
  { title: t(lang, "trust.academic.title"), description: t(lang, "trust.academic.desc") },
  { title: t(lang, "trust.infra.title"), description: t(lang, "trust.infra.desc") },
  { title: t(lang, "trust.secure.title"), description: t(lang, "trust.secure.desc") },
];
---

<section class="py-20 sm:py-28">
  <div class="mx-auto max-w-4xl px-6">
    <h2 class="text-3xl sm:text-4xl font-bold text-barivia-dark text-center tracking-tight">
      {t(lang, "trust.heading")}
    </h2>
    <div class="mt-14 grid grid-cols-1 sm:grid-cols-3 gap-8">
      {signals.map((signal) => (
        <div class="text-center">
          <h3 class="text-lg font-semibold text-barivia-dark">{signal.title}</h3>
          <p class="mt-2 text-barivia-gray leading-relaxed text-sm">{signal.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

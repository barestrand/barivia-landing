---
import { t, type Lang } from "../i18n/ui";
interface Props { lang: Lang }
const { lang } = Astro.props;
---

<section class="py-20 sm:py-28">
  <div class="mx-auto max-w-4xl px-6">
    <h2 class="text-3xl sm:text-4xl font-bold text-barivia-dark text-center tracking-tight">
      {t(lang, "whatWeDo.heading")}
    </h2>
    <div class="mt-8 space-y-5 text-lg text-barivia-gray leading-relaxed text-center max-w-3xl mx-auto">
      <p>{t(lang, "whatWeDo.p1")}</p>
      <p>{t(lang, "whatWeDo.p2")}</p>
      <p>{t(lang, "whatWeDo.p3")}</p>
    </div>
  </div>
</section>

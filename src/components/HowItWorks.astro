---
import { t, type Lang } from "../i18n/ui";
interface Props { lang: Lang }
const { lang } = Astro.props;

const steps = [
  { number: "1", title: t(lang, "how.step1.title"), description: t(lang, "how.step1.desc") },
  { number: "2", title: t(lang, "how.step2.title"), description: t(lang, "how.step2.desc") },
  { number: "3", title: t(lang, "how.step3.title"), description: t(lang, "how.step3.desc") },
  { number: "4", title: t(lang, "how.step4.title"), description: t(lang, "how.step4.desc") },
];
---

<section id="how" class="py-20 sm:py-28 bg-white">
  <div class="mx-auto max-w-5xl px-6">
    <h2 class="text-3xl sm:text-4xl font-bold text-barivia-dark text-center tracking-tight">
      {t(lang, "how.heading")}
    </h2>
    <div class="mt-14 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
      {steps.map((step) => (
        <div class="text-center">
          <div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-barivia-blue text-white text-lg font-bold">
            {step.number}
          </div>
          <h3 class="mt-4 text-lg font-semibold text-barivia-dark">{step.title}</h3>
          <p class="mt-2 text-barivia-gray leading-relaxed">{step.description}</p>
        </div>
      ))}
    </div>
  </div>
</section>

---
import { t, type Lang } from "../i18n/ui";
interface Props { lang: Lang }
const { lang } = Astro.props;

const items = [
  { title: t(lang, "monitoring.anomaly.title"), desc: t(lang, "monitoring.anomaly.desc") },
  { title: t(lang, "monitoring.live.title"), desc: t(lang, "monitoring.live.desc") },
  { title: t(lang, "monitoring.continuous.title"), desc: t(lang, "monitoring.continuous.desc") },
];
---

<section class="py-20 sm:py-28 bg-white">
  <div class="mx-auto max-w-4xl px-6">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-barivia-dark tracking-tight">
        {t(lang, "monitoring.heading")}
      </h2>
      <p class="mt-4 text-lg text-barivia-gray max-w-2xl mx-auto leading-relaxed">
        {t(lang, "monitoring.sub")}
      </p>
    </div>

    <div class="mt-12 grid grid-cols-1 sm:grid-cols-3 gap-8">
      {items.map((item) => (
        <div class="text-center">
          <h3 class="font-semibold text-barivia-dark">{item.title}</h3>
          <p class="mt-2 text-sm text-barivia-gray leading-relaxed">{item.desc}</p>
        </div>
      ))}
    </div>

    <p class="mt-10 text-center text-barivia-gray text-sm">
      {t(lang, "monitoring.closing")}
    </p>
  </div>
</section>

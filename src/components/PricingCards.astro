---
const plans = [
  {
    name: "Free",
    price: "$0",
    period: "",
    description: "Try it out",
    features: ["50 one-time credits", "5 datasets", "Basic grid sizes"],
    cta: "Get Started",
    highlighted: false,
  },
  {
    name: "Researcher",
    price: "$29",
    period: "/mo",
    description: "Students, individual analysts",
    features: ["500 credits/month", "25 datasets", "Medium grid sizes", "Email support"],
    cta: "Start Free Trial",
    highlighted: false,
  },
  {
    name: "Professional",
    price: "$99",
    period: "/mo",
    description: "Engineers, data scientists",
    features: ["2,500 credits/month", "50 datasets", "Large grid sizes", "5 concurrent jobs", "Priority support"],
    cta: "Start Free Trial",
    highlighted: true,
  },
  {
    name: "Team",
    price: "$299",
    period: "/mo",
    description: "Small teams, consulting firms",
    features: ["10,000 credits/month", "Unlimited datasets", "Full grid sizes", "20 concurrent jobs", "Dedicated support"],
    cta: "Start Free Trial",
    highlighted: false,
  },
  {
    name: "Enterprise",
    price: "Custom",
    period: "",
    description: "Dedicated capacity, SLA, SSO",
    features: ["Custom credits", "Unlimited everything", "GPU-accelerated", "On-premise option", "SLA guarantee"],
    cta: "Contact Us",
    highlighted: false,
  },
];
---

<section id="pricing" class="py-20 sm:py-28 bg-white">
  <div class="mx-auto max-w-6xl px-6">
    <div class="text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-barivia-dark tracking-tight">
        Pricing
      </h2>
      <p class="mt-4 text-lg text-barivia-gray max-w-xl mx-auto">
        A typical analysis session uses 25-30 credits. Iterate freely within your plan.
      </p>
    </div>

    <div class="mt-14 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-5 gap-5">
      {plans.map((plan) => (
        <div
          class:list={[
            "rounded-xl p-6 flex flex-col border",
            plan.highlighted
              ? "bg-barivia-dark text-white border-barivia-dark shadow-xl scale-[1.02]"
              : "bg-barivia-light border-gray-100",
          ]}
        >
          <h3
            class:list={[
              "text-lg font-bold",
              plan.highlighted ? "text-white" : "text-barivia-dark",
            ]}
          >
            {plan.name}
          </h3>
          <div class="mt-3 flex items-baseline gap-1">
            <span
              class:list={[
                "text-3xl font-bold",
                plan.highlighted ? "text-white" : "text-barivia-dark",
              ]}
            >
              {plan.price}
            </span>
            {plan.period && (
              <span
                class:list={[
                  "text-sm",
                  plan.highlighted ? "text-blue-200" : "text-barivia-gray",
                ]}
              >
                {plan.period}
              </span>
            )}
          </div>
          <p
            class:list={[
              "mt-2 text-sm",
              plan.highlighted ? "text-blue-200" : "text-barivia-gray",
            ]}
          >
            {plan.description}
          </p>
          <ul class="mt-5 space-y-2 flex-1">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-2 text-sm">
                <span class={plan.highlighted ? "text-blue-200" : "text-barivia-blue"}>
                  âœ“
                </span>
                <span class={plan.highlighted ? "text-blue-100" : "text-barivia-gray"}>
                  {feature}
                </span>
              </li>
            ))}
          </ul>
          <a
            href={plan.name === "Enterprise" ? "mailto:h.barestrand@gmail.com?subject=Barivia%20Enterprise" : "#"}
            class:list={[
              "mt-6 block rounded-lg py-2.5 text-center text-sm font-semibold transition-colors",
              plan.highlighted
                ? "bg-white text-barivia-dark hover:bg-blue-50"
                : "bg-barivia-blue text-white hover:bg-barivia-dark",
            ]}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>

    <p class="mt-8 text-center text-sm text-barivia-gray">
      $99/month replaces days of specialist consulting.
    </p>
  </div>
</section>

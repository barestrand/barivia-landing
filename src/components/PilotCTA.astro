---
import { t, langPrefix, type Lang } from "../i18n/ui";
interface Props { lang: Lang }
const { lang } = Astro.props;

const items = [
  { title: t(lang, "pilot.scope"), desc: t(lang, "pilot.scopeDesc") },
  { title: t(lang, "pilot.deliverable"), desc: t(lang, "pilot.deliverableDesc") },
  { title: t(lang, "pilot.timeline"), desc: t(lang, "pilot.timelineDesc") },
  { title: t(lang, "pilot.commitment"), desc: t(lang, "pilot.commitmentDesc") },
];
---

<section id="pilot" class="py-20 sm:py-28 bg-white">
  <div class="mx-auto max-w-4xl px-6">
    <div class="rounded-2xl bg-gradient-to-br from-barivia-dark to-barivia-blue p-10 sm:p-14 text-center">
      <h2 class="text-3xl sm:text-4xl font-bold text-white tracking-tight">
        {t(lang, "pilot.heading")}
      </h2>
      <p class="mt-6 text-lg text-blue-100 max-w-2xl mx-auto leading-relaxed">
        {t(lang, "pilot.sub")}
      </p>
      <div class="mt-10 grid grid-cols-1 sm:grid-cols-2 gap-6 max-w-xl mx-auto text-left">
        {items.map((item) => (
          <div class="flex items-start gap-3">
            <span class="mt-0.5 text-blue-200 font-bold">&rarr;</span>
            <div>
              <p class="text-white font-medium">{item.title}</p>
              <p class="text-blue-200 text-sm">{item.desc}</p>
            </div>
          </div>
        ))}
      </div>
      <a
        href="mailto:info@barivia.se?subject=Barivia%20Pilot%20Project"
        class="mt-10 inline-flex items-center justify-center rounded-lg bg-white text-barivia-dark font-semibold px-8 py-3.5 text-base hover:bg-blue-50 transition-colors shadow-lg"
      >
        {t(lang, "pilot.cta")}
      </a>
    </div>
  </div>
</section>
